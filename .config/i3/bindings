bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/volume_brightness.sh volume_down && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/volume_brightness.sh volume_mute && $refresh_i3status
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/volume_brightness.sh brightness_up && $refresh_i3status
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/volume_brightness.sh brightness_down && $refresh_i3status
bindsym XF86AudioPlayPause exec --no-startup-id ~/.config/i3/volume_brightness.sh play_pause && $refresh_i3status
bindsym XF86AudioPause exec --no-startup-id ~/.config/i3/volume_brightness.sh play_pause && $refresh_i3status
bindsym XF86AudioPlay exec --no-startup-id ~/.config/i3/volume_brightness.sh play_pause && $refresh_i3status
bindsym XF86AudioNext exec --no-startup-id ~/.config/i3/volume_brightness.sh next_track && $refresh_i3status
bindsym XF86AudioPrev exec --no-startup-id ~/.config/i3/volume_brightness.sh prev_track && $refresh_i3status

# Copy-and-paste shortcuts
bindsym --release $mod+c exec --no-startup-id python -O ~/.config/i3/clipboard_operation.py copy
bindsym --release $mod+x exec --no-startup-id python -O ~/.config/i3/clipboard_operation.py cut
bindsym --release $mod+v exec --no-startup-id python -O ~/.config/i3/clipboard_operation.py paste

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+d kill
bindsym $mod+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec --no-startup-id dmenu_run
# A more modern dmenu replacement is rofi:
# bindsym $mod+d exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindsym $mod+space exec --no-startup-id i3-dmenu-desktop
# bindsym $mod+space exec --no-startup-id rofi -show combi -run-command "i3-msg exec '{cmd}'" -show-icons
bindsym $mod+space exec --no-startup-id "rofi -show drun"
bindsym $mod+shift+space exec --no-startup-id "rofi -show run"
bindsym $mod+f exec --no-startup-id "rofi -show window"
bindsym $mod+shift+f exec --no-startup-id "rofi -show filebrowser"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal (like :split in Vim)
bindsym $mod+s split v

# split in vertical (like :vsplit in Vim)
bindsym $mod+shift+s split h

# enter fullscreen mode for the focused container
bindsym $mod+z fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+a layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
# bindsym $mod+w floating toggle ; [floating] resize set 1720 1200 ; [floating] move position center
bindsym $mod+w floating toggle

# change focus between tiling / floating windows
bindsym $mod+m focus mode_toggle

# change focus between parent and child
bindsym $mod+u focus parent
bindsym $mod+i focus child

# focus the parent container
bindsym $mod+bracketleft focus prev
bindsym $mod+bracketright focus next

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

